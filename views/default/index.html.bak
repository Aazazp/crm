{{extend 'layout.html'}}

<table>
    <thead>
        <tr>
            <th><a href="{{=URL('sort', vars=dict(column='last_name'))}}">Last Name</a></th>
            <th><a href="{{=URL('sort', vars=dict(column='company'))}}">Company</a></th>
            <th><a href="{{=URL('sort', vars=dict(column='date_created'))}}">Date Created</a></th>
        </tr>
    </thead>
    <tbody>
        {{for row in sort.data:}}
        <tr>
            <td>{{=row.last_name}}</td>
            <td>{{=row.company}}</td>
            <td>{{=row.date_created}}</td>
        </tr>
        {{pass}}
    </tbody>
</table>


<h2>This is different</h2>

<p>
    {{ = A('Go To Company List', _href = URL('companies'))}}
    <br/>
    {{ = A('Go To Person List', _href = URL('persons'))}}
    <br/>
    {{ = A('Go To Event List', _href = URL('events'))}}
</p>
